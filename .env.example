# ── Insights DB ───────────────────────────────────────────────
DATABASE_URL=postgresql://insights:insights@localhost:5433/serviceup_insights

# ── Metabase API (proxies to BigQuery Stitch replica) ─────────
METABASE_URL=https://your-metabase-instance.metabaseapp.com
METABASE_API_KEY=your-metabase-api-key
METABASE_DATABASE_ID=34

# ── Firebase ──────────────────────────────────────────────────
# Set to the path of your service account JSON file, OR paste the JSON directly
FIREBASE_SERVICE_ACCOUNT_KEY_PATH=/path/to/serviceaccount.json
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}  # alternative: inline JSON
FIREBASE_STORAGE_BUCKET=serviceupios.appspot.com

# ── Gemini ────────────────────────────────────────────────────
GEMINI_API_KEY=your-gemini-api-key

# ── API + Embed ───────────────────────────────────────────────
PORT=4050
API_KEY=your-internal-api-key
EMBED_SECRET=change-this-to-a-random-secret

# ── Processing ────────────────────────────────────────────────
INSIGHTS_BATCH_SIZE=10
INSIGHTS_MAX_RETRIES=3

# ── Optional: Google Sheet seed data ─────────────────────────
# Used by scripts/seedFromGsheet.ts for dev/test bootstrapping
GSHEET_CSV_PATH=./data/seed-invoices.csv
